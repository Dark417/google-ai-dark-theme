{
    "manifest_version": 3,
    "name": "Google AI Dark Theme",
    "version": "1.0.0",
    "description": "Apply a sleek dark theme to Google Search AI Mode",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://www.google.com/*",
        "*://google.ai/*",
        "*://www.google.ai/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.google.com/*",
                "*://google.ai/*",
                "*://www.google.ai/*"
            ],
            "css": [
                "styles/dark-theme.css"
            ],
            "js": [
                "scripts/content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}